            DEVICE_DELAY_US(100); //FIXME: understand why this is needed
        }
        return true;
    }
    for (int i = 0; i < length; i++) {
        if (objectIndexTable[i].first > minIndex &&
            objectIndexTable[i].first < maxIndex) {
