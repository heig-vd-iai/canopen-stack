    SDOAbortCodes abortCode;
    int count = 0;

    if (parameterGroup == ParameterGroup_Communication) {
        minIndex = 0x1000;
        maxIndex = 0x1FFF;
    } else if (parameterGroup == ParameterGroup_Application) {
        minIndex = 0x6000;
        maxIndex = 0x9FFF;
    } else {
        for (int i = 0; i < length; i++) {
            size = getSize(i);
            tmp = getMetadata(i)->getDefaultValue();
            int8_t ret;
            count = 0;
            while(writeData(tmp, i, abortCode) != 0){
                count++;
